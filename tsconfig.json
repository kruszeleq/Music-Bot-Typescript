{
  "compileOnSave": true,
  "compilerOptions": {
    "lib": ["ES2021.String"],
    "module": "ESNext",
    "moduleResolution": "Node10",
    "esModuleInterop": true,
    "target": "ESNext",
    "baseUrl": "src",
    "rootDir": "./src",
    "outDir": "./dist",
    "importHelpers": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "noEmitOnError": true,
    "skipDefaultLibCheck": true
  },
  "include": ["src/**/**/**/*.ts"],
  "exclude": ["node_modules"]
}
